
<div  class="sign-up-form">
<%# <h1>Edit Book</h1> %>
<form action="/books/<%= book['id'] %>" method="POST">
    <input type="hidden" name="_method" value="put">
    <h1>Edit Book</h1>

    <%# <label for="">Name: </label> %>
    <input type="text" class="input-box" placeholder="Name" name="name" value="<%= book['name'] %>">

    <%# <label for="">Image URL: </label> %>
    <input type="text" class="input-box" placeholder="Image URL" name="image_url" value="<%= book['image_url'] %>">

    <%# <label for="">Author: </label> %>
    <input type="text" class="input-box" placeholder="Author" name="author" value="<%= book['author'] %>">

    <%# <label for="">Genre: </label> %>
    <input type="text" class="input-box" placeholder="Genre" name="genre" value="<%= book['genre'] %>">

    <%# <label for="">Year first published: </label> %>
    <input type="text" class="input-box" placeholder="Year first published" name="year" value="<%= book['year'] %>">


    <button class="signup-btn">Update book</button>

</form>
</div>


