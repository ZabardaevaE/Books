<h1>Books</h1>
<a href="/books/new">Add new book</a>

<section class="books">
    <% books.each do |book| %>
        <section class="book">
            <header>
                <h2><%= book['name'] %></h2>
            </header>
                <h3>Author: <%= book['author']%></h3>
                <h3>Genre: <%= book['genre']%></h3>
                <h3>Year first published: <%= book['year']%></h3>
                <img src="<%= book['image_url'] %>" alt="">
        </section>
        <% end %>

</section>